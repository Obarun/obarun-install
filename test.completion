#!/bin/bash

fls(){
	local dir=$1
	current=$dir
	#current=${current##*/}
	echo current::$current
	zone=$(find $dir -maxdepth 1 -mindepth 1|awk -F"$dir/" '{print $2}'|sort|fzf --prompt="Arrow up/down key to navigate - Enter to select" --reverse -s --height 50% --border)
	
	if [[ -d $dir/$zone ]];then
		fls $dir/$zone
	fi
	echo zone::$zone
	echo current::$current
}
